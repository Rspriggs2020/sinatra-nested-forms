<h1>Display your Pirate here</h1>
<div class="pirate">
<h2>Name: <%= @pirate.name %></h2>
<h2>Weight: <%= @pirate.weight %></h2>
<h2>Height: <%= @pirate.height %></h2>
</div> 


<h2>Display your first ship here</h2>
<h1>Ship One</h1>
<% @ships.each.with_index do |ship, index| %>
<div class="ship">
    <% if index == 0 %>
    <p>Name: <%= ship.name%></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
    <% end %>
<% end %>
</div>



<h2>Display your second ship here</h2>
<h1>Ship Two</h1>
<% @ships.each.with_index do |ship, index| %>
<div class="ship">
    <% if index == 1 %>
    <p>Name: <%= ship.name%></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
<% end %>
</div>

